<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/default_padding"
    android:background="@color/canvas_color"
    tools:context="com.example.hessrecordingtest.TestReportActivity">

    <TextView
        android:id="@+id/text_report_heading"
        android:layout_width="match_parent"
        android:textAlignment="center"
        android:layout_height="wrap_content"
        android:textColor="@color/white_color"
        android:textSize="@dimen/default_padding"
        android:text="TEST REPORT"/>

    <ImageView
        android:id="@+id/imageview_testreport"
        android:layout_below="@id/text_report_heading"
        android:layout_marginTop="@dimen/default_padding"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <TextView
        android:id="@+id/points_legend"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="textEnd"
        android:textColor="@color/green_color"
        android:paddingEnd="@dimen/default_padding"
        android:text="Original Test Points"/>

    <TextView
        android:layout_above="@id/points_legend"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="textEnd"
        android:textColor="@color/red_color"
        android:padding="@dimen/default_padding"
        android:text="User Selected Points"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
</RelativeLayout>
